<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pelican>

<configuration version="1.0">

  <server>
    <buffers>
      <StreamBlob>
        <buffer maxSize="4294967296" maxChunkSize="4294967296"/>
      </StreamBlob>
    </buffers>

    <chunkers>
      <StreamChunker>
        <data type="StreamBlob"/>
        <channel subbands="1-63"/>
        <connection host="127.0.0.1" port="2001" timeout="30000"/>
      </StreamChunker>
    </chunkers>
  </server>

</configuration>
