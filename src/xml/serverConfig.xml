<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pelican>

<configuration version="1.0">

  <server>
    <buffers>
      <StreamBlob>
        <buffer maxSize="50000000000" maxChunkSize="50000000000"/>
      </StreamBlob>
      <ServiceBlob>
        <buffer maxSize="50000000000" maxChunkSize="50000000000"/>
      </ServiceBlob>
    </buffers>

    <chunkers>
      <StreamChunker>
        <chunk timeout="1500"/>
        <data type="StreamBlob"/>
        <antennae count="288"/>
        <connection host="127.0.0.1" port="2001"/>
      </StreamChunker>
      <ServiceChunker>
        <data type="ServiceBlob"/>
        <connection host="127.0.0.1" port="2002"/>
      </ServiceChunker>
    </chunkers>
  </server>

</configuration>
