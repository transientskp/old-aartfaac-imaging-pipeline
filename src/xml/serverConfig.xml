<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pelican>

<configuration version="1.0">

  <server>
    <buffers>
      <UniboardDataBlob>
        <buffer maxSize="50000000000" maxChunkSize="50000000000"/>
      </UniboardDataBlob>
    </buffers>

    <chunkers>
      <StreamUniboardChunker>
        <chunk timeout="1500"/>
        <data type="UniboardDataBlob"/>
        <antennae count="288"/>
        <connection host="127.0.0.1" port="2001"/>
      </StreamUniboardChunker>
      <ServiceUniboardChunker>
        <data type="UniboardServiceBlob"/>
        <connection host="127.0.0.1" port="3001"/>
      </ServiceUniboardChunker>
    </chunkers>
  </server>

</configuration>
